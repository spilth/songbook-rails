<%= form_with(model: song, local: true) do |form| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :artist %>
    <%= form.collection_select(:artist_id, Artist.all, :id, :name, { prompt: true }, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= form.label :key %>
    <%= form.text_field :key, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :capo %>
    <%= form.number_field :capo, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :tempo %>
    <%= form.number_field :tempo, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :year %>
    <%= form.number_field :year, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :spotify_uri %>
    <%= form.text_field :spotify_uri, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 20 %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
